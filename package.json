{
  "name": "ts-tidy",
  "version": "0.0.0",
  "description": "Find and clean dead TypeScript code in a single command",
  "author": "Nicolas Carlo <nicolascarlo.espeon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicoespeon/ts-tidy.git"
  },
  "homepage": "https://github.com/nicoespeon/ts-tidy",
  "bugs": "https://github.com/nicoespeon/ts-tidy/issues",
  "sponsor": {
    "url": "https://github.com/sponsors/nicoespeon"
  },
  "keywords": [
    "typescript",
    "ts",
    "delete",
    "unused",
    "clean",
    "tidy",
    "refactor"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./lib/index.js",
  "bin": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "scripts": {
    "prepare": "husky install",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "pretest": "yarn lint",
    "test": "jest",
    "test:ci": "yarn typecheck && yarn test",
    "build": "tsc",
    "prepublish": "rm -rf lib && yarn build"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.48.0",
    "all-contributors-cli": "6.24.0",
    "babel-jest": "29.4.3",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "prettier": "2.8.2",
    "pretty-quick": "3.1.3",
    "typescript": "4.9.4"
  }
}
